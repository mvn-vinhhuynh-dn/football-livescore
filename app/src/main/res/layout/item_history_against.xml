<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time_ltd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/margin_2dp"
        android:paddingLeft="@dimen/margin_5"
        android:paddingTop="@dimen/margin_2dp"
        android:text="20/12/2015 - vÃ²ng 29"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:weightSum="7">

        <TextView
            android:id="@+id/home_name_item_detail_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Chealse" />

        <ImageView
            android:id="@+id/home_icon_item_detail"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/ic_chelsea" />

        <TextView
            android:id="@+id/tv_goals_item_detail"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2 - 0" />

        <ImageView
            android:id="@+id/against_icon_item_detail"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/ic_manchester_united" />

        <TextView
            android:id="@+id/against_name_item_detail_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Manchester United" />
    </LinearLayout>
</LinearLayout>